import requests
from bs4 import BeautifulSoup

url = "https://futurism.com/latest"
response = requests.get(url)

get_soup = BeautifulSoup(response.text, "html.parser")

headline = []

for div in  get_soup.find_all("div", class_ = "leading-tight font-ab text-3 md:text-4 lg:text-5xl hover:underline"):
    headline.append(div.get_text(strip=True))
    
with open("headlines.txt", "w", encoding="utf-8") as f:
    for idx, line in enumerate(headline, 1):
        f.write(f"{idx}. {line}\n")

print("Headlines saved to headlines.txt")
